<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Add Source Sales Team field to Invoice form -->
    <record id="view_move_form_inherit_source_team" model="ir.ui.view">
        <field name="name">account.move.form.inherit.source.team</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <!-- Add after invoice_user_id in the header section -->
            <xpath expr="//field[@name='invoice_user_id']" position="after">
                <field name="source_team_id" 
                       readonly="1"
                       attrs="{'invisible': [('move_type', 'not in', ['out_invoice', 'out_refund'])]}"/>
            </xpath>
        </field>
    </record>

    <!-- Add Source Sales Team to Invoice tree view -->
    <record id="view_invoice_tree_inherit_source_team" model="ir.ui.view">
        <field name="name">account.move.tree.inherit.source.team</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_invoice_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='invoice_user_id']" position="after">
                <field name="source_team_id" optional="hide"/>
            </xpath>
        </field>
    </record>

    <!-- Add info message to invoice form showing analytics will be applied -->
    <record id="view_move_form_inherit_analytics_info" model="ir.ui.view">
        <field name="name">account.move.form.inherit.analytics.info</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="before">
                <div class="alert alert-info text-center" 
                     role="alert"
                     attrs="{'invisible': ['|', '|',
                             ('move_type', 'not in', ['out_invoice', 'out_refund']),
                             ('source_team_id', '=', False),
                             ('state', '!=', 'draft')]}">
                    <field name="source_team_id" invisible="1"/>
                    <strong>Analytics Account Auto-Assignment:</strong>
                    When this invoice is posted, analytics account from 
                    <field name="source_team_id" readonly="1" class="oe_inline"/> 
                    will be automatically applied to invoice lines.
                </div>
            </xpath>
        </field>
    </record>
</odoo>